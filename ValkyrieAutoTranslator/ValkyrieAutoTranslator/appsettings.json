{
  "secrets": {
    "deepSeekApiKey": "", // Your DeepSeek API key.  Only needed if using DeepSeek LLM features (useLlmApi = "true")
    "deepLApiKey": "" // Your DeepL API key. Only needed if using DeepL as translator provider (translatorProvider = "DeepL")
  },
  "translation": {
    "translate": "true", // Options: "true", "false", if false, no translation will be performed
    "translatorProvider": "DeepL", // Options: "DeepL"
    "sourceLanguage": "en", // Options: "en", "de", "fr", "it", "es", "nl", "pl", "ru", "ja", "zh"
    "targetLanguageName": "German", // Used to identify target language column in glossary file
    "targetLanguage": "de", // Options: "en", "de", "fr", "it", "es", "nl", "pl", "ru", "ja", "zh"
    "sourceLanguageName": "English", // Used to identify source language column in glossary file
    "deepL": {
      "deepLApiMode": "free", // Options: "free", "paid"
      "deepLApiUpdateGlossary": "true", // Options: "true", "false"
      "deepLContext": {
        "default": "", // Context to use for all keys that do **not** start with "Activation"
        "activation": "" // Context to use for all keys that start with "Activation"
      },
      "deepLFormality": "more", // Options: "default", "more", "less"
      "deepLGlossaryFilePath": "" // Path to DeepL glossary CSV file, leave empty to not use a glossary
    }
  },
  "llm": {
    "llmPrompt": "", // Prompt to use for LLM API (currently only used for DeepSeek)
    "useLlmApi": "true" // Options: "true", "false"
  },
  "cache": {
    "useTranslationCache": "true", // Options: "true", "false", if true, translations will be cached to avoid duplicate API calls
    "translationCacheFilePath": "" // Path to folder where translation cache files will be stored, leave empty to not use caching
  },
  "fileInputOutput": {
    "inputPath": "", // Path to folder where input files are located
    "inputFileName": "*.txt", // File name or pattern, e.g. "*.txt" or "localization.csv"
    "outputPath": "", // Path to folder where output files will be stored
    "outputFileNameAdditionalPart": "_translated", // Additional part to add to output file name before file extension
    "csvOutputFileDelimiter": "," // Delimiter to use for CSV output files, e.g. "," or ";"
  }
}